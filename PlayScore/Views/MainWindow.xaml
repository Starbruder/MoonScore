<Window x:Class="MoonScore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoonScore"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MoonScore" Height="900" Width="1600"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Icon="/Views/moonscore_IconLogo.png">

    <Window.Background>
		<ImageBrush ImageSource="pack://application:,,,/Assets/Images/Backgrounds\background_3.jpeg" Stretch="UniformToFill"/>
    </Window.Background>
	
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
		<StackPanel>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5, 5, 5, 5">
				<Button Content="Bar Chart" Width="150" Height="50" Margin="2, 2, 2, 2" Click="Barchart_Click"/>
				<Button Content="Pie Chart" Width="150" Height="50" Margin="2, 2, 2, 2" Click="Piechart_Click"/>
				<Button Content="API Screen" Width="150" Height="50" Margin="2, 2, 2, 2" Click="OpenAPIScreen"/>
			</StackPanel>
			<Button Content="Show Moonphases" Width="150" Height="50" Margin="10,5,10,0" Click="ShowMoonPhases_Click"/>
		</StackPanel>
    </ScrollViewer>

</Window>
