<Window x:Class="MoonScore.Views.PieChartDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoonScore.Views" xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MoonScore Pie Chart" Height="570" Width="800" ResizeMode="CanMinimize">

	<Window.Background>
		<ImageBrush ImageSource="pack://application:,,,/Assets/Images/Backgrounds\background_2.jpeg" Stretch="UniformToFill"/>
	</Window.Background>

	<Grid Margin="0,-5,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Row for top-aligned content (Auto size) -->
			<RowDefinition Height="*"/>
			<!-- Row for the rest of the content (fill remaining space) -->
		</Grid.RowDefinitions>

		<oxy:PlotView x:Name="MoonPhasePlot" Height="500" Width="700">
			<oxy:PlotView.Background>
				Transparent
			</oxy:PlotView.Background>
			<oxy:PlotView.Effect>
				<DropShadowEffect Color="#e03f7f" BlurRadius="100" Direction="180" ShadowDepth="10"/>
			</oxy:PlotView.Effect>
		</oxy:PlotView>
	</Grid>
</Window>
