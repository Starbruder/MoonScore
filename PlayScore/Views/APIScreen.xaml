<Page x:Class="MoonScore.Views.APIScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoonScore.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="APIScreen"
      Style="{StaticResource MaterialDesignWindow}"
	  Background="Gray">

	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
		<StackPanel>
			<Label HorizontalContentAlignment="Center" Margin="250, 5, 250, 0" Height="30" Foreground="White">
				Datum input Format: YYYY-MM-DD
			</Label>
			<TextBox Name="DateTextBox" Width="200" Height="30" Margin="10" Foreground="White"/>
			<Button Content="Get Moon Phase" Width="150" Height="30" Margin="10,5,10,0" Click="GetMoonphase"/>

			<Image x:Name="moonImage"
			   HorizontalAlignment="Left"
			   VerticalAlignment="Bottom"
			   Grid.Column="1" Grid.Row="1"
			   Stretch="None"
			   d:IsLocked="False"/>

			<TextBlock TextAlignment="Center" Name="MoonPhaseTextBlock" Margin="0,5,0,5" Height="30" FontSize="20" Foreground="White"/>

			<Button Content="Get Games" Width="150" Height="30" Margin="10,5,10,0" Click="GetGamesAsync"/>

			<Label Margin="0,10,150,0" HorizontalAlignment="Center" Height="30" Foreground="White">
				Liste der Spiele
			</Label>
			<Grid>
				<ListBox x:Name="GamesListBox"
                     Width="300"
             HorizontalAlignment="Center" 
             VerticalAlignment="Stretch" 
             DisplayMemberPath="Name">
					<ListBox.Foreground>
						White
					</ListBox.Foreground>
				</ListBox>
			</Grid>
			<Button Content="Save Games to Database" Width="250" Height="30" Margin="10,5,10,10" Click="SaveGamesToDatabaseAsync"/>
		</StackPanel>
	</ScrollViewer>

</Page>
