<Window x:Class="MoonScore.Views.APIScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoonScore.Views"
        mc:Ignorable="d"
        Title="MoonScore" Height="900" Width="1600"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Icon="/Views/moonscore_IconLogo.png">

	<Window.Background>
		<ImageBrush ImageSource="pack://application:,,,/Assets/Images/Backgrounds\background_4.png" Stretch="UniformToFill"/>
	</Window.Background>

	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
		<StackPanel>
			<Button Content="Back to MainScreen"
					Width="200"
					Height="50"
					Margin="2, 2, 2, 2"
					Click="OpenMainWindow"
					HorizontalAlignment="Left"/>

			<DatePicker Name="DateTextBox" Width="150" Height="30" Margin="0,100,0,0"/>
			<Button Content="Get Moon Phase" Width="150" Height="30" Margin="10,5,10,0" Click="GetMoonphase"/>
			<Image x:Name="moonImage"
				Width="150" Height="150"
				Margin="0,10,0,0"
				HorizontalAlignment="Center"
				VerticalAlignment="Bottom"
				Grid.Column="1" Grid.Row="1"
				Stretch="Fill"
				d:IsLocked="False"/>
			<TextBlock Name="MoonPhaseTextBlock"
				Margin="0,5,0,5"
				Height="30"
				FontSize="20"
				TextAlignment="Center"
				HorizontalAlignment="Center"
				Foreground="White"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Content="Get Games" Width="250" Margin="10,5,10,0" Click="GetGamesAsync" VerticalAlignment="Top"/>
				<GroupBox Header="List of Games" Margin="0,5,0,0">
					<ListBox x:Name="GamesListBox"
						Width="300"
						HorizontalAlignment="Center" 
						DisplayMemberPath="Name"
						Foreground="White"/>
				</GroupBox>
				<Button Content="Save Games to Database" Width="250" Margin="10,5,10,10" Click="SaveGamesToDatabaseAsync" VerticalAlignment="Top"/>
			</StackPanel>
		</StackPanel>
	</ScrollViewer>

</Window>
