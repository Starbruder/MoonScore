<Window x:Class="PlayScore.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayScore"
        mc:Ignorable="d"
        Title="StartScreen" Height="900" Width="1400"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Content="Start Program" Width="250" Click="StartProgram_Click" Grid.Row="0" Margin="0,0,0,100"/>
        <Button Content="Close" Width="250" Click="Close_Click" Grid.Row="2" Margin="0,100,0,0"/>
    </Grid>
</Window>
